<article id="project" class="project">
    <header>
        <%= image_for @project %>
        <h1><%= @project.name %></h1>
        <h2><%= format_date(@project) %></h2>
    </header>

    <p><%= @project.description %></p>

    <h3>Traget Pledge Amount</h3>
    <p><%= number_to_currency(@project.target_pledge_amount) %></p>

    <h3>Website</h3>
    <p><%= @project.website %></p>

    <h3>Team Members</h3>
    <p><%= @project.team_members %></p>

    <footer>
        <%= format_pledge_link(@project) %>
        <nav>
            <%= link_to 'Edit Project', edit_project_path, class: 'button' %>
            <%= link_to 'Delete Project', project_path(@project),
                class: 'button',
                method: :delete, data: {confirm: 'Are you sure you want to delete this project?'} %>
            <%= link_to pluralize(@project.pledges.count, 'Pledge'), project_pledges_path(@project), class: 'button' %>
        </nav>
    </footer>
</article>
