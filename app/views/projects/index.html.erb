<ul id="projects">
    <% @projects.each do |project| %>
        <li>
            <article class="project" id="<%= dom_id(project) %> ">
                <header>
                    <%= image_for(project) %>
                    <h2><%= link_to project.name, project_path(project) %></h2>
                </header>
                <p>
                    <%= truncate(project.description, length: 150, separator: ' ') %>
                </p>
                <table>
                    <tr>
                        <td>Pledging Ends</td>
                        <td><%= format_date(project) %></td>
                    </tr>
                    <tr>
                        <td>Target Amount</td>
                        <td><%= number_to_currency(project.target_pledge_amount) %></td>
                    </tr>
                </table>
            </article>
        </li>
    <% end %>
</ul>

<p><%= pluralize(@projects.count, 'Project') %></p>
