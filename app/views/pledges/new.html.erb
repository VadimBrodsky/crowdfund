<header>
    <h1>Pledge for <%= link_to @project.name, @project %></h1>
</header>

<%= form_for [@project, @pledge] do |f| %>
    <fieldset>
        <%= render 'shared/errors', object: @pledge %>
        <ol>
            <li class="required">
                <%= f.label :name %>
                <%= f.text_field :name %>
            </li>
            <li class="required">
                <%= f.label :email %>
                <%= f.text_field :email %>
            </li class="required">
            <li class="required">
                <%= f.label :amount %>
                <%= f.select :amount, Pledge::AMOUNT_LEVELS, prompt: 'Pick One' %>
            </li>
            <li>
                <%= f.label :comment %>
                <%= f.text_area :comment %>
            </li>
        </ol>
        <p>
            <%= f.submit %>
            <%= link_to 'Cancel', project_path(@project), class: 'button' %>
        </p>
    </fieldset>
<% end %>
